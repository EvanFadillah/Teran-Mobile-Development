<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context=".ui.journal.AddJournalActivity">

    <ImageButton
        android:id="@+id/addJournalDeleteButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/baseline_delete_24"
        android:backgroundTint="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/finishButton"
        android:layout_width="93dp"
        android:layout_height="32dp"
        android:layout_margin="12dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finish"
            android:textColor="@color/orange"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="60dp"
            android:src="@drawable/baseline_arrow_forward_24" />
    </androidx.cardview.widget.CardView>
    <EditText
        android:id="@+id/addJournalTitleEdt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="12dp"
        android:paddingHorizontal="15dp"
        android:background="@drawable/orange_border"
        android:hint="@string/add_title"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/contentScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finishButton" />

    <ScrollView
        android:id="@+id/contentScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/orange_border"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addJournalTitleEdt"
        app:layout_constraintVertical_bias="1.0">

        <EditText
            android:id="@+id/addJournalContentEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:background="@drawable/custom_edt"
            android:hint="@string/add_content"
            android:padding="15dp"
            android:scrollbars="vertical" />
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>