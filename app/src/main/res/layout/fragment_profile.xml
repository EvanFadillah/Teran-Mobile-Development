<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context=".ui.home_page.profile.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/img_background_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:padding="2dp"
            android:src="@drawable/baseline_photo_camera_back_24"
            android:background="@drawable/rectangle_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/img"
            android:background="@drawable/circle_background"
            android:padding="3dp"
            android:layout_marginTop="90dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_username_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arry"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_profile" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="136dp"
            android:background="@drawable/circle_background"
            android:padding="5dp"
            android:src="@drawable/baseline_edit_24"
            app:layout_constraintBottom_toBottomOf="@+id/img_profile"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.card.MaterialCardView
            style="@style/RoundedTopCorners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_username_profile"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/text_title_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/title_profile"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/username_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginHorizontal="1dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_title_profile">


                    <ImageView
                        android:id="@+id/username_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="18dp"
                        android:src="@drawable/baseline_person_24" />

                    <TextView
                        android:id="@+id/username_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="11dp"
                        android:text="@string/name"
                        app:layout_constraintStart_toEndOf="@+id/username_icon"
                        app:layout_constraintTop_toBottomOf="@+id/text_title_profile" />

                    <EditText
                        android:id="@+id/edt_username_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="70dp"
                        android:hint="@string/enter_name"
                        android:textColor="@color/black"
                       android:visibility="gone"
                         />

                    <TextView
                        android:id="@+id/tv_username_profile"
                        android:layout_width="224dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="25dp"
                        android:text="@string/arry"
                        android:textColor="@color/gray"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/edit_username_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="300dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/baseline_edit_gray" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/email_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginHorizontal="1dp"
                    android:layout_marginVertical="10dp"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/username_cardView">


                    <ImageView
                        android:id="@+id/email_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="18dp"
                        android:src="@drawable/ic_baseline_email_24" />

                    <TextView
                        android:id="@+id/email_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="11dp"
                        android:text="@string/email"
                        app:layout_constraintStart_toEndOf="@+id/username_icon"
                        app:layout_constraintTop_toBottomOf="@+id/text_title_profile" />

                    <EditText
                        android:id="@+id/edt_email_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="70dp"
                        android:hint="@string/enter_email"
                        android:textColor="@color/black"
                        android:visibility="gone"
                         />

                    <TextView
                        android:id="@+id/tv_email_profile"
                        android:layout_width="224dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="25dp"
                        android:text="@string/email_example"
                        android:textColor="@color/gray"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/edit_email_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="300dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="18dp"
                        android:src="@drawable/baseline_edit_gray" />


                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/text_title_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="25dp"
                    android:text="@string/title_settings"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/email_cardView" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/theme_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginHorizontal="1dp"
                    android:layout_marginVertical="10dp"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_title_setting">


                    <ImageView
                        android:id="@+id/theme_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="18dp"
                        android:src="@drawable/baseline_dark_mode_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="11dp"
                        android:text="@string/theme"
                        app:layout_constraintStart_toEndOf="@+id/username_icon"
                        app:layout_constraintTop_toBottomOf="@+id/text_title_profile" />


                    <TextView
                        android:id="@+id/tv_theme_profile"
                        android:layout_width="224dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="25dp"
                        android:text="@string/system_default"
                        android:textColor="@color/gray"
                        android:textStyle="bold" />



                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btn_log_out"
                    android:layout_width="124dp"
                    android:layout_marginTop="35dp"
                    android:layout_height="wrap_content"
                    android:text="@string/log_out"
                    app:layout_constraintTop_toBottomOf="@id/theme_cardView"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>